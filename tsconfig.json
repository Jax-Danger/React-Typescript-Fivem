{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
			"@/*": ["packages/*"]
    },
    "typeRoots": [
      "packages/globals/*",
      "node_modules/@types"
    ],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true
  },
  "include": ["packages/**/*", "globals/**/*.ts"]
}
